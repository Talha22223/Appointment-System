# IMPORTANT: Add your actual API keys and database URL
# Copy this file to .env and fill in your actual values

# Database URL (replace with your actual PostgreSQL database URL)
DATABASE_URL="postgresql://username:password@your-host:5432/your-database"

# JWT Secret for authentication (use a strong random string)
JWT_SECRET="your-super-secret-jwt-key-here-replace-this"

# OpenAI API Configuration for Chatbot
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"

# Optional: NextJS configuration
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Frontend URL for CORS
FRONTEND_URL="http://localhost:5173"